@{
}
<div class="conteiner-fluid m-3">
    <h2>List of contacts</h2>
    <table class="table">
        @foreach(var contact in @Model)
         {
            <tr>
                <td>
                    @contact.Name
                </td>
                <td>
                    @contact.BirthDate.Date <!-- TODO sama data bez godziny -->
                </td>
                <td>
                    @contact.Email
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Contact" asp-action="Edit"  asp-route-id="@contact.ID">Edytuj</a>
                    <a class="btn btn-primary" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ID">Usuń</a>
                </td>
            </tr>      
         }
    </table>
</div>