@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}



<div calass="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-success">
               <i class="bi bi-plus-square"></i> &nbsp; Create new Product
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-border table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr >
                <td class="w-50 align-middle">
                    @obj.Name
                </td>
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-x-square"></i>Delete</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
</div>